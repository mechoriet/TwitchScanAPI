<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <Nullable>enable</Nullable>
        <ServerGarbageCollection>true</ServerGarbageCollection>
        <ThreadPoolMinThreads>20</ThreadPoolMinThreads>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MongoDB.Driver" Version="3.4.0" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="7.3.1" />
        <PackageReference Include="TwitchLib" Version="3.5.3"/>
        <PackageReference Include="TwitchLib.Api" Version="3.10.0-preview-4e0146c" />
        <PackageReference Include="VaderSharp2" Version="3.3.2.1" />
    </ItemGroup>

    <ItemGroup>
        <_ContentIncludedByDefault Remove="TwitchStats\Banned.json"/>
        <_ContentIncludedByDefault Remove="TwitchStats\ClearedMessages.json"/>
        <_ContentIncludedByDefault Remove="TwitchStats\MessagesByMods.json"/>
        <_ContentIncludedByDefault Remove="TwitchStats\Subscriptions.json"/>
        <_ContentIncludedByDefault Remove="TwitchStats\TimedOut.json"/>
    </ItemGroup>

</Project>
